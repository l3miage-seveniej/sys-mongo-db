            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\orders\(OID):application\json:main-config">
        <ee:transform doc:name="Transform Message">
            <ee:variables>
                <ee:set-variable variableName="OID">attributes.uriParams.'OID'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <logger level="INFO" message="post:\orders\(OID):application\json:main-config" />
    </flow>
</mule>
